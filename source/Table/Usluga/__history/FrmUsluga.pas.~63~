unit FrmUsluga;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Mask, Vcl.DBCtrls,
  Data.DB, IBX.IBCustomDataSet, IBX.IBQuery, IBX.IBDatabase, IBX.IBTable, sharemem, System.TypInfo,
  Data.FMTBcd, Data.SqlExpr;

type
  TUsluga = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    GroupBox1: TGroupBox;
    GroupBox2: TGroupBox;
    ChangeBtn: TButton;
    DeleteBtn: TButton;
    AddBtn: TButton;
    SaveBtn: TButton;
    FirstBtn: TButton;
    LastBtn: TButton;
    BackBtn: TButton;
    NextBtn: TButton;
    DB: TIBDatabase;
    IBTransaction: TIBTransaction;
    Query: TIBQuery;
    DataSource: TDataSource;
    Label3: TLabel;
    Usluga: TIBQuery;
    ID_MED_USL: TEdit;
    MED_USL: TEdit;
    procedure readdate();
    procedure update();
    procedure FormCreate(Sender: TObject);
    procedure ChangeBtnClick(Sender: TObject);
    procedure DeleteBtnClick(Sender: TObject);
    procedure AddBtnClick(Sender: TObject);
    procedure SaveBtnClick(Sender: TObject);
    procedure FirstBtnClick(Sender: TObject);
    procedure LastBtnClick(Sender: TObject);
    procedure NextBtnClick(Sender: TObject);
    procedure BackBtnClick(Sender: TObject);
    procedure FormActivate(Sender: TObject);
    procedure ID_MED_USLChange(Sender: TObject);
    procedure MED_USLChange(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Usluga: TUsluga;
implementation

{$R *.dfm}

uses All;

procedure TUsluga.readdate;
Begin
  ID_MED_USL.Text:=USLUGA.FieldByName('ID_Med_Usl').Value;
  MED_USL.Text:=USLUGA.FieldByName('Med_Usl').Value;
End;
procedure TUsluga.update;
begin
  USLUGA.sql.Clear;
  USLUGA.sql.add('SELECT * FROM USLUGA WHERE ID_Med_Usl='+ID_Med_Usl.Text);
  USLUGA.ParamByName('ID_Med_Usl').Value:=strtoint(ID_Med_Usl.Text);
  USLUGA.ParamByName('Med_Usl').Value:=MED_USL.Text;
  USLUGA.open;

End;
procedure TUsluga.AddBtnClick(Sender: TObject);
begin
if  AddBtn.Caption='Отмена' then
Begin
MED_USL.Enabled:=False;
  SaveBtn.Enabled:=False;
  DeleteBtn.Enabled:=True;
  ChangeBtn.Enabled:=True;
  AddBtn.Caption:='Добавить';
  USLUGA.last;
End
  Else
  begin
    MED_USL.Enabled:=True;
  SaveBtn.Enabled:=true;
  DeleteBtn.Enabled:=False;
  ChangeBtn.Enabled:=False;
  AddBtn.Caption:='Отмена';
  ID_MED_USL.text:=inttostr(1+(strtoint(ID_MED_USL.text)));
  MED_USL.text:='';
  end;
end;

procedure TUsluga.BackBtnClick(Sender: TObject);
begin
USLUGA.prior;
readdate;
end;

procedure TUsluga.ChangeBtnClick(Sender: TObject);
begin
if  ChangeBtn.Caption='Отмена' then
Begin
MED_USL.Enabled:=False;
  SaveBtn.Enabled:=False;
  DeleteBtn.Enabled:=True;
  AddBtn.Enabled:=True;
  ChangeBtn.Caption:='Изменить';
End
  Else
  begin
    MED_USL.Enabled:=True;
  SaveBtn.Enabled:=true;
  DeleteBtn.Enabled:=False;
  AddBtn.Enabled:=False;
  ChangeBtn.Caption:='Отмена';
  end;
  end;

procedure TUsluga.DeleteBtnClick(Sender: TObject);
begin
ShowMessage('Уверены что хотите удалить эту запись?');
end;

procedure TUsluga.FirstBtnClick(Sender: TObject);
begin
USLUGA.first;
readdate;
end;

procedure TUsluga.FormActivate(Sender: TObject);
begin
USLUGA.First;
readdate;
end;

procedure TUsluga.FormCreate(Sender: TObject);
begin
Connection(DB,IBTransaction);
USLUGA.SQL.Add('SELECT * FROM USLUGA');
USLUGA.open;
readdate;
end;

procedure TUsluga.ID_MED_USLChange(Sender: TObject);
begin

update;
end;

procedure TUsluga.LastBtnClick(Sender: TObject);
begin
USLUGA.last;
readdate;
end;

procedure TUsluga.MED_USLChange(Sender: TObject);
begin

update;
end;

procedure TUsluga.NextBtnClick(Sender: TObject);
begin
USLUGA.next;
readdate;
end;

procedure TUsluga.SaveBtnClick(Sender: TObject);
begin
if ChangeBtn.Caption='Отмена' then
begin
MBox(1,query, USLUGA, label3, IBTransaction);
Db.Connected:=false;
Connection(DB,IBTransaction);
USLUGA.close;
USLUGA.open;
readdate;
USLUGA.first;
end;

end;

end.
